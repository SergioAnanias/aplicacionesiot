<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu Restaurant"
        android:layout_centerHorizontal="true"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/nivelCO"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/medium"
         />

    <TextView
        android:id="@+id/nivelesCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nivel de CO Actual:"
        android:layout_below="@+id/nivelCO"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="344dp" />
    <TextView
        android:id="@+id/numeroCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5 ppm"
        android:layout_below="@+id/nivelesCO"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="344dp" />

</RelativeLayout>